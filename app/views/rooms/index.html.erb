<div class="container col-sm-9 my-2">
  
  <div class="card">
    <div class="card-header">
      <% if user_is_admin_or_company?(current_user) %>
      <h5 class="card-title text-center">Meus chats com os candidatos</h5>
      <% else %>
      <h5 class="card-title text-center">Meus chats com as empresas</h5>
      <% end %>
    </div>

    <div class="card-body" id="rooms">
      <% @rooms.each do |room| %>

        <% if room.invite.present? %>
          <p>
            <%= link_to room, class:"link-light" do %>
              <%= render room %>
            <% end %>
          </p>
          <hr/>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
