<div class="container my-4">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-3">
         <form action="/people/search">
            <select class="form-select" aria-label="Default select example">
              <option selected class="text-center">Pesquisar por categorias</option>
              <% Category.all.each do |category|%>
                 <option value="<% category.id %>" class="text-center"><%= category.name %></option>
              <% end %>
                
                <option value="1" class="text-center">One</option>
            </select>
         </form>
        </div>
        <div class="col text-center d-flex justify-content-left" >
            <form action="/people/search" class="d-flex col-sm-10">
                <input class="form-control me-2" type="search" name="key" placeholder="Search by title, name, gender and email" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
      

      
</div>